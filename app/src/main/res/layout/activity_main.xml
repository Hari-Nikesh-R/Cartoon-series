<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/content_base"
android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/listgrad"

android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/header_RL"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginEnd="1dp"
            android:background="@color/DeepSkyBlue"
            android:orientation="horizontal"
            android:weightSum="1">
            <ImageButton
                android:id="@+id/navigate_flight"
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:background="@color/DeepSkyBlue"
                android:src="@drawable/ic_baseline_flight_24"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:scaleX="1.5"
                android:scaleY="1.5"/>
            <ImageButton
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="15dp"
                android:background="@color/DeepSkyBlue"
                android:minWidth="40dp"
                android:minHeight="40dp"
                android:src="@drawable/ic_baseline_home_24"

                />

            <androidx.cardview.widget.CardView
                android:layout_width="290dp"
                android:layout_height="45dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="8dp"
                android:layout_weight="0.3"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="4dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_search_parameter"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:hint="@string/search_here"
                        android:background="@android:color/transparent"
                    android:imeOptions="actionSearch"
                        android:inputType="text"
                        />

                    <ImageButton
                        android:id="@+id/home_clear"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:src="@drawable/ic_baseline_clear_24"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:paddingBottom="4dp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:id="@+id/main_search_parameter"
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:layout_marginVertical="7dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="60dp"
                android:background="@color/DeepSkyBlue"
                android:minHeight="80dp"
                android:minWidth="80dp"

                android:src="@drawable/ic_baseline_search_24" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        android:id="@+id/main_activity"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harry Potter Series"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textSize="25sp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_potter"/>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BEN 10"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textSize="25sp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_ben_10"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="King Kong"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textSize="25sp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_king_kong"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NARUTO"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textSize="25sp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_naruto"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </ScrollView>


</LinearLayout>
